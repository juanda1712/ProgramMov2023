<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage   xmlns="http://xamarin.com/schemas/2014/forms"   
                 xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaMVVM.Views.popUp.PopUpDetail">


    <StackLayout  VerticalOptions="Center" BackgroundColor="White" Margin="30" Padding="20" Spacing="10">

        <StackLayout>
            <Entry  Placeholder="Usuario" Text="{Binding Usertxt, Mode=TwoWay}" PlaceholderColor="LightSlateGray"></Entry>
        </StackLayout>
        <StackLayout>
            <Entry Placeholder="Nombre" Text="{Binding Nametxt, Mode=TwoWay}" PlaceholderColor="LightSlateGray"></Entry>
        </StackLayout>
        <StackLayout>
            <Entry Placeholder="Contraseña" Text="{Binding PasswordTxt, Mode=TwoWay}"  PlaceholderColor="LightSlateGray"></Entry>
        </StackLayout>

        <StackLayout  Orientation="Horizontal" Margin="15" Spacing="20">
            <Button Text="Aceptar"  BackgroundColor="LightSteelBlue" HorizontalOptions="StartAndExpand"></Button>
        </StackLayout>

    </StackLayout>
    
</popup:PopupPage>
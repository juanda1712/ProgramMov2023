<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaMVVM.Views.Register">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout>
                <Entry Placeholder="Usuario" Text="{Binding Usertxt, Mode=TwoWay}" PlaceholderColor="LightSlateGray"></Entry>
            </StackLayout>
            <StackLayout>
                <Entry Placeholder="Nombre" Text="{Binding Nametxt, Mode=TwoWay}" PlaceholderColor="LightSlateGray"></Entry>
            </StackLayout>
            <StackLayout>
                <Entry Placeholder="Contraseña" Text="{Binding PasswordTxt, Mode=TwoWay}"  PlaceholderColor="LightSlateGray"></Entry>
            </StackLayout>

            <StackLayout  Orientation="Horizontal" Margin="15" Spacing="20">
                <Button Text="Aceptar" Command="{Binding SaveCommand}" BackgroundColor="LightSteelBlue" HorizontalOptions="StartAndExpand"></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
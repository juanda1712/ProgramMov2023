<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgramMov2023.Eventos">
    <ContentPage.Content>
        <StackLayout Spacing="20">



                <StackLayout Orientation="Vertical" Margin="10" Padding="10">
                    <Entry Placeholder="Nombre" x:Name="etnombre" ></Entry>
                    <Entry Placeholder="Apellido" TextChanged="etapellido_TextChanged" x:Name="etapellido" ></Entry>
                    <StackLayout Orientation="Horizontal">
                        <CheckBox CheckedChanged="CheckBox_CheckedChanged"></CheckBox>
                        <Label Text="Rec" ></Label>
                    </StackLayout>

                </StackLayout>


            <StackLayout Margin="10">
                <Button Clicked="Button_Clicked"   Text="Aceptar"></Button>
                
            </StackLayout>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgramMov2023.MainPage" BackgroundColor="AliceBlue">

    <StackLayout VerticalOptions="Center" Spacing="40" >

        <StackLayout Orientation="Horizontal" BackgroundColor="LightSteelBlue" HorizontalOptions="Center">
            <Label Text="Welcome" TextColor="LightSlateGray" ></Label>
            <Label Text="Xamarin"></Label>
            
         </StackLayout>


        <StackLayout>
            <Slider Minimum="0" Maximum="1" />
            <Entry Placeholder="Ingrese un valor"></Entry>
            <Switch IsToggled="True" IsEnabled="True" BackgroundColor="#41C22A" />
        </StackLayout>
        
        <StackLayout Spacing="25" HorizontalOptions="Center" Orientation="Horizontal">
            <Button Text="Aceptar"   BackgroundColor="CadetBlue" ></Button>
            <Button Text="Cancelar"   BackgroundColor="PaleVioletRed" ></Button>
            <Button Text="Cancelar"   BackgroundColor="PaleVioletRed" ></Button>
        </StackLayout>
        
        

     
        
   
        
        
    </StackLayout>

</ContentPage>
